@model IEnumerable<App.Domain.QuestionnaireRelation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Questionnaire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Requirement)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Questionnaire!.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Meeting!.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event!.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Requirement!.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
